<div class="row row-cols-1 row-cols-lg-1 g-3">
  <div class="col mb-4">
    <div class="card h-100">
      <div class="card-body d-flex flex-row">
        <div>
          <%= image_tag category.icon, style: 'height: 60px', class: 'mx-3 mb-3' if category.icon.attached? %>
        </div>
        <div class="flex-grow-1">
          <h5 class="card-title text-secondary">
            <%= category.name %>
          </h5>
          <p class="card-text">
            <%= number_to_currency(category.payments.sum(:amount), unit: '$') %>
          </p>
          <% if category.payments.any? %>
            <p class="card-text">
             <%= category.payments.last.created_at.strftime('%B %e, %Y %l:%M %p') %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
