<%= form_with(model: category, class: "category-form") do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Category Name", class: "visually-hidden" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Category Name", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :icon, "Category Icon", class: "visually-hidden" %>
    <%= form.file_field :icon, class: "form-control", required: true %>
  </div>
  
  <div>
    <%= form.submit "Save Category", class: "btn btn-primary" %>
  </div>
<% end %>
