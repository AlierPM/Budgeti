<div class="container-lg mt-4 p-2 shadow bg-primary-100">
  <div id="<%= dom_id payment %>" class="card p-3 my-2">
    <div class="d-flex justify-content-between align-items-center">
      <p class="h5 mb-0">
        <%= payment.name %>
      </p>
    
      <p class="font-weight-bold">
        <strong>$</strong>
        <%= payment.amount %>
      </p>
    </div>
  
    <p class="text-muted mt-1">
      <%= payment.created_at.strftime('%B %d, %Y %I:%M %p') %>
    </p>
  </div>
</div>
