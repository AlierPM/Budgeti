<div class="bg-primary">
  <div class="container pt-4" style="margin-top:50px">
    <div class="d-flex justify-content-end">
      <div class="btn-group">
        <%= link_to "Most Recent", category_payments_path(@category, order: 'recent'), class: "btn btn-primary" %>
        <%= link_to "Ancient", category_payments_path(@category, order: 'ancient'), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

  <div class="container">
    <%= render 'shared/flash_messages' %>
  </div>

<div class="container-lg">
  <div class="container-lg mt-4">
    <div class="card bg-gray-300 shadow">
      <div class="card-body d-flex justify-content-between text-secondary">
        <p class="font-weight-medium text-xl">Total Transactions</p>
        <p class="text-center font-weight-bold text-xl">
          <%= number_to_currency(@category.payments.sum(:amount), unit: '$') %>
        </p>
      </div>
    </div>

    <div id="payments" class="mt-4">
      <% @payments.each do |payment| %>
        <%= render payment %>
      <% end %>
    </div>
  </div>

</div>
  <div class="fixed-bottom fixed-left fixed-right bg-success p-3">
    <%= link_to "New Payment", new_category_payment_path(@category), class: "btn btn-primary d-block w-100 p-3 text-lg font-weight-bold text-center text-white" %>
  </div>
