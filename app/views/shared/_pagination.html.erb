<!-- app/views/shared/_pagination.html.erb -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center pt-4">
    <% if @categories.previous_page %>
      <li class="page-item">
        <%= link_to 'Previous', categories_path(page: @categories.previous_page), class: 'page-link' %>
      </li>
    <% end %>

    <% (1..@categories.total_pages).each do |page| %>
      <% if (page == @categories.current_page) || ((page - @categories.current_page).abs <= 1) %>
        <li class="page-item <%= 'active' if page == @categories.current_page %>">
          <%= link_to page, categories_path(page: page), class: 'page-link' %>
        </li>
      <% elsif (page - @categories.current_page).abs == 2 %>
        <li class="page-item disabled">
          <span class="page-link">...</span>
        </li>
      <% end %>
    <% end %>

    <% if @categories.next_page %>
      <li class="page-item">
        <%= link_to 'Next', categories_path(page: @categories.next_page), class: 'page-link' %>
      </li>
    <% end %>
  </ul>
</nav>
